<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp30.66"
        android:layout_marginTop="@dimen/dp25.1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/dp31">

        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/dp10.22"
            android:layout_height="@dimen/dp16"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/calendar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회의 일정"
            android:textColor="#000000"
            android:textSize="@dimen/sp20.00"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp298.6"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_layout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp273"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dp13.33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp298.66"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp16.66"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:text="날짜"
                android:textColor="#000000"
                android:textSize="@dimen/sp20.00"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/view_calendar"
                android:layout_width="298dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/dp5.33"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date">

                <ImageView
                    android:id="@+id/theme_color"
                    android:layout_width="@dimen/dp5.33"
                    android:layout_height="@dimen/dp5.33"
                    android:layout_marginHorizontal="@dimen/dp2.67"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pink_theme" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp6.33"
                    android:singleLine="true"
                    android:text="일정 제목"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp15.33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/theme_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="일정 시간"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp13.33"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/tv_title"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/create_intent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                app:layout_constraintTop_toBottomOf="@+id/view_calendar">

                <ImageView
                    android:id="@+id/plus_btn"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/calendar_add" />

                <TextView
                    android:id="@+id/create_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:singleLine="true"
                    android:text="새 회의 일정 생성하기"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp15.33"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/plus_btn"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

<!--    슬라이드 화면-->
    <androidx.cardview.widget.CardView
        android:id="@+id/create_window"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp362"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp13.33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp298.66"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp26"
            android:orientation="vertical">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minWidth="@dimen/dp0"
                android:minHeight="@dimen/dp0"
                android:text="취소"
                android:textColor="#80000000"
                android:textSize="@dimen/dp16.66"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minWidth="@dimen/dp0"
                android:minHeight="@dimen/dp0"
                android:text="추가"
                android:textColor="#1E349D"
                android:textSize="@dimen/dp16.66"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp13.33"
                android:background="@null"
                android:minWidth="@dimen/dp0"
                android:minHeight="@dimen/dp0"
                android:text="삭제"
                android:textColor="#80000000"
                android:textSize="@dimen/dp16.66"
                app:layout_constraintEnd_toStartOf="@+id/add_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            제목-->
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp60"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="제목"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/conference_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:ems="10"
                    android:singleLine="true"
                    android:hint="제목"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.1"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="#5A5A5A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

            <!--            주제-->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp13.33"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/view1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="주제"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/conference_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:ems="10"
                    android:singleLine="true"
                    android:hint="주제"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.1"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="#5A5A5A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <!--            테마색-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp13.33"
                android:text="테마 색"
                android:textColor="#000000"
                android:textSize="@dimen/sp16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <ImageButton
                android:id="@+id/theme_color1"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp14"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="@drawable/important1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageView
                android:id="@+id/theme_color2"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp14"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="@drawable/need1"
                app:layout_constraintStart_toEndOf="@+id/theme_color1"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageButton
                android:id="@+id/theme_color3"
                android:layout_width="@dimen/dp44"
                android:layout_height="@dimen/dp14"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="@drawable/long_time"
                app:layout_constraintStart_toEndOf="@+id/theme_color2"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageButton
                android:id="@+id/theme_color4"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp14"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="@drawable/pleasantness"
                app:layout_constraintStart_toEndOf="@+id/theme_color3"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <ImageButton
                android:id="@+id/theme_color5"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp14"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="@drawable/expectation"
                app:layout_constraintStart_toEndOf="@+id/theme_color4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.1"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="#5A5A5A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/theme_color1" />

            <!--            회의 시간-->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp13.33"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/view3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="회의 시간"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp16" />

                <EditText
                    android:id="@+id/conference_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:ems="10"
                    android:singleLine="true"
                    android:hint="회의시간"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.1"
                android:layout_marginTop="@dimen/dp13.33"
                android:background="#5A5A5A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp13.33"
                android:text="회의 메모"
                android:textColor="#000000"
                android:textSize="@dimen/sp16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view4" />

            <EditText
                android:id="@+id/conference_memo"
                android:layout_width="@dimen/dp298.66"
                android:layout_height="@dimen/dp231.33"
                android:layout_marginTop="@dimen/dp13.33"
                android:hint="회의 내용에 대한 간단한 요약과, 회의 시의 기분 등을 다양하게 적어보세요!"
                android:textSize="@dimen/sp12"
                android:gravity="top"
                android:background="@drawable/border"
                android:ems="10"
                android:padding="@dimen/dp10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>